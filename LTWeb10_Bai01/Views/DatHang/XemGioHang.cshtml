@model LTWeb10_Bai01.Models.GioHang

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <h2>Thông tin giỏ hàng đã chọn</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã sách</th>
                <th>Tên sách</th>
                <th>Ảnh</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.lst)
            {
                <tr>
                    <td>@item.iMaSach</td>
                    <td>@item.sTenSach</td>
                    <td>
                        <img src="~/Images/@item.sAnhBia" width="60" height="80" />
                    </td>
                    <td>@item.iSoLuong</td>
                    <td>@String.Format("{0:N0}", item.dDonGia) VND</td>
                    <td>@String.Format("{0:N0}", item.ThanhTien) VND</td>
                    <td class="text-center">
                        <a href="@Url.Action("ChiTietSach", "Sach", new { id = item.iMaSach })" class="btn btn-outline-info btn-sm me-5">
                            Chi tiết sách
                        </a>
                        <a href="@Url.Action("XoaGioHang", "DatHang", new { id = item.iMaSach })" class="btn btn-outline-danger btn-sm me-5" onclick="return confirm('Bạn có chắc muốn xóa sách này khỏi giỏ hàng không?');">
                            Xóa
                        </a>
                        <a href="@Url.Action("SuaGioHang", "DatHang", new { id = item.iMaSach })" class="btn btn-outline-warning btn-sm">
                            Sửa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.lst != null && Model.lst.Count > 0)
    {
        <div class="text-end mt-3">
            <a href="@Url.Action("DatHang", "DatHang")" class="btn btn-success btn-lg">
                Đặt hàng
            </a>
        </div>
    }
    else
    {
        <p class="text-danger mt-3">Giỏ hàng của bạn đang trống.</p>
    }

</body>
</html>

