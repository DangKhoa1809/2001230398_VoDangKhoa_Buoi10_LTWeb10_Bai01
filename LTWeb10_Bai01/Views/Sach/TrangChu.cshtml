@model LTWeb10_Bai01.Models.tblKhachHang

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container mt-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h3 class="text-success mb-3">Thông tin khách hàng</h3>

                <p><strong>Họ tên:</strong> @Model.TenKhachHang</p>
                <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
                <p><strong>Điện thoại:</strong> @Model.SoDienThoai</p>
            </div>
        </div>
    </div>
</body>
</html>


