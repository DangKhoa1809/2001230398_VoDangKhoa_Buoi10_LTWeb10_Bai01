<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/CSS.css" />
    <link rel="stylesheet" / href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header class="py-2 border-bottom shadow-sm">
        <div class="container d-flex justify-content-between align-items-center">

            <div>
                <a href="@Url.Action("TrangChu", "Sach")">
                    <img src="~/Images/logo.jpg" alt="logo" style="height: 60px;" />
                </a>
            </div>

            <form class="d-flex flex-grow-1 mx-3" action="@Url.Action("AllSach", "Sach")" method="get">
                <input type="text" name="keyword" class="form-control form-control-sm me-2" placeholder="Nhập từ khóa tìm kiếm..." />
                <button type="submit" class="btn btn-outline-success btn-sm">Tìm</button>
            </form>

            <div class="d-flex align-items-center me-4">
                @if (Session["KhachHang"] == null)
                {
                    <i class="bi bi-person fs-4 text-success me-2"></i>
                    <a href="@Url.Action("DangNhap", "KhachHang")" class="text-decoration-none small text-dark">
                        Đăng nhập
                    </a>
                }
                else
                {
                    <i class="bi bi-person-circle fs-4 text-success me-2"></i>
                    <div class="d-flex flex-column">
                        <span class="small text-dark mb-0">
                            Chào bạn, <strong>@Session["TenKhachHang"]</strong>
                        </span>
                        <a href="@Url.Action("DangXuat", "KhachHang")" class="text-decoration-none small text-danger">
                            Đăng xuất
                        </a>
                    </div>
                }
            </div>

            <div class="text-center">
                @{
                    var gio = Session["GioHang"] as LTWeb10_Bai01.Models.GioHang;
                    int soLuong = gio != null ? gio.TongSLHang() : 0;
                }
                <a href="@Url.Action("XemGioHang", "DatHang")" class="text-decoration-none text-dark position-relative">
                    <i class="bi bi-cart fs-4"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @soLuong
                    </span>
                </a>
            </div>

        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark text-bg-danger">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse show" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item me-3">
                        <a class="nav-link" href="@Url.Action("TrangChu","Sach")">Trang chủ</a>
                    </li>

                    <li class="nav-item me-3">
                        <a class="nav-link" href="@Url.Action("GioiThieu","Sach")">Giới thiệu</a>
                    </li>

                    <li class="nav-item me-3">
                        <a class="nav-link" href="@Url.Action("HienThiSanPham","Sach")">Sản phẩm</a>
                    </li>

                    <li class="nav-item me-3">
                        <a class="nav-link" href="@Url.Action("HuongDanSuDung","Sach")">Hướng dẫn sử dụng</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("LienHe","Sach")">Liên hệ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="mt-5 text-bg-danger">
        <div class="container text-center py-2">
            <p class="mb-0">Khoa Công nghệ Thông tin - HUIT © 2025</p>
        </div>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
